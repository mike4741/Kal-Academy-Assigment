<Page x:ConnectionId='1'
    x:Class="UWPPhotoLibrary.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPPhotoLibrary"
    xmlns:data="using:UWPPhotoLibrary.Model1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <RelativePanel>
            <Button x:ConnectionId='16' Content="&#xE700;" RelativePanel.AlignLeftWithPanel="True"
                    FontFamily="Segoe MDL2 Assets" Width="45" Name ="HamburgerButton"                              />
            <Button x:ConnectionId='17' Content="&#xE0A6;" RelativePanel.RightOf="HamburgerButton"
                    FontFamily="Segoe MDL2 Assets" Width="45" Name ="BackButton"                          />
        </RelativePanel>
        <SplitView x:ConnectionId='2' Grid.Row="1" Name="MySplitView"
                   DisplayMode="CompactOverlay"
                   CompactPaneLength="120"
                   OpenPaneLength="300">
            <SplitView.Pane>
                <ListView x:ConnectionId='3' Name="MenuItemsListView" 
                          IsItemClickEnabled ="True"
                                                          
                                                                 >
                    <ListView.ItemTemplate>
                        <DataTemplate                           >
                            <StackPanel x:ConnectionId='5' Orientation="Horizontal">
                                <Image x:ConnectionId='6'                            Height="100" Width="100"/>
                                <TextBlock x:ConnectionId='7'                          FontSize="20" Margin="30,40,0,0" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    
                </ListView>
            </SplitView.Pane>
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Border Background ="SkyBlue"/>
                    <MediaElement x:ConnectionId='8' Name="MyMediaElement" AutoPlay="True"/>
                    <TextBlock x:ConnectionId='9' Name="CategoryTextBlock" Text=" My Photo Album" FontFamily="Century Gotthic" FontStyle="Italic"   FontSize="50" HorizontalAlignment="Center"/>
                    <TextBlock x:ConnectionId='10' x:Name="NameButtonOutput" HorizontalAlignment="Right"/>
                    <StackPanel Orientation="Horizontal" Margin="30,15,0,20" HorizontalAlignment="Right">
                        <TextBox x:ConnectionId='14' x:Name="nameInput"
                        PlaceholderText="Name"
                        Width="150"/>
                        <Button x:ConnectionId='15' Content="Save"                         />
                    </StackPanel>
                    <GridView x:ConnectionId='11' Grid.Row="1"
                              Name ="PictureGridView"
                                                                                     
                              IsItemClickEnabled="True"
                              SelectionMode="Extended"
                                                                    >
                        <TextBox />
                        <GridView.ItemTemplate>
                            <DataTemplate                           >
                                <Image x:ConnectionId='13' Name="MyImage" 
                                       Height="200" Width="150"
                                                                    
                                        />
                            </DataTemplate>
                        </GridView.ItemTemplate>
                        
                    </GridView>
                    </Grid>
                </SplitView.Content>
            </SplitView>      
     </Grid>
</Page>

